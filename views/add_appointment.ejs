    	<script>
            $(function () {
                $('#datetimepicker3').datetimepicker({
                    format: 'hh:mm A',
                    stepping: 30,
                    minDate: moment().set({ hour: 7, minute: 0 }),
                    maxDate: moment().set({ hour: 19, minute: 0 })
                });

                $('.datetimepicker').datetimepicker({
                    format: 'YYYY-MM-DD'
                });

                $('#department').on('input', function() {
                    var department = $(this).val();
                    var doctors = <%- JSON.stringify(doctors) %>;
                    var filteredDoctors = doctors.filter(function(doctor) {
                        return doctor.department === department;
                    });

                    var datalist = $('#doctors');
                    datalist.empty();
                    filteredDoctors.forEach(function(doctor) {
                        datalist.append('<option value="' + doctor.document + '">' + doctor.name + ' - ' + doctor.document + '</option>');
                    });
                });

                $('form').on('submit', function(event) {
                    event.preventDefault();
                    var doctorDocument = $('#doctor').val();
                    var date = $('input[name="date"]').val();
                    var time = $('input[name="time"]').val();
                    var formattedTime = moment(time, 'hh:mm A').format('HHmmss');

                    $.ajax({
                        url: '/appointment/check_availability',
                        method: 'POST',
                        data: { doctor_document: doctorDocument, date: date, time: formattedTime },
                        success: function(response) {
                            if (response.available) {
                                $('input[name="time"]').val(formattedTime);
                                $('form')[0].submit();
                            } else {
                                alert('El doctor ya tiene una cita a esta hora. Por favor, seleccione otra hora.');
                            }
                        }
                    });
                });
            });

            function submitForm() {
                $('form').submit();
            }
     </script>
